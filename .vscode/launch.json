{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Pelican: Build with -r -l",
            "type": "python",
            "request": "launch",
            "program": "/Users/zqw/miniconda3/envs/sci/bin/pelican",  // Pelican 可执行文件的路径
            "args": [
                "content"     // -r 参数用于重新生成所有内容
                // "-l"      // -l 参数用于启用本地开发模式
            ],
            "cwd": "${workspaceFolder}",  // 运行 Pelican 的项目文件夹
            "env": {},
            "console": "integratedTerminal",  // 使用集成终端输出
            "justMyCode": false
        }
    ]
}
